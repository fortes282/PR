# --- Frontend (Next.js) ---
# API mode: mock (default) or http
NEXT_PUBLIC_API_MODE=mock
# Base URL when using http (e.g. backend)
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

# --- Backend (apps/api) ---
# Port for the API server (default 3001)
PORT=3001
# Secret for JWT signing; use a random string in production
JWT_SECRET=dev-secret-change-in-production
# SQLite database path (default: ./data/pristav.db). For production use an absolute path and backup regularly.
# DATABASE_PATH=/var/lib/pristav/pristav.db
