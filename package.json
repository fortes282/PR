{
  "name": "pristav-radosti",
  "version": "0.1.0",
  "private": true,
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "dev:3000": "next dev -p 3000",
    "dev:3001": "next dev -p 3001",
    "dev:api": "pnpm --filter api dev",
    "dev:all": "concurrently -n next,api -c blue,green \"pnpm run dev:3000\" \"pnpm dev:api\"",
    "build:sqlite": "pnpm --filter api build:sqlite",
    "build": "pnpm --filter @pristav/shared build && next build",
    "start": "next start",
    "start:3001": "next start -p 3001",
    "lint": "next lint",
    "test": "jest",
    "test:api": "node scripts/test-api.mjs",
    "test:e2e": "node scripts/ensure-env-e2e.mjs && playwright test",
    "test:e2e:full": "node scripts/ensure-env-e2e.mjs && concurrently -k -s first \"pnpm dev:all\" \"wait-on -t 180000 http://localhost:3000 && pnpm exec playwright test\"",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@pristav/shared": "workspace:*",
    "framer-motion": "^12.30.1",
    "lucide-react": "^0.563.0",
    "next": "^14.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "wait-on": "^8.0.5"
  }
}
